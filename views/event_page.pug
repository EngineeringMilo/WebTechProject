extends layout
block content

    //- TODO: Make this page look nicer
    .event-page-title
        h1 #{event.title}
    p Date: #{event.date.toDateString()}
    p Location: #{event.location}
    p Price: #{event.ticketPrice} &euro;
    p Target audience: #{event.targetAudience}
    if user != null
        if event.createdBy != user.id
            form(action=`/event/${event._id}/join`, method = "POST")
                if (!user.joinedEvents.includes(event._id))
                    input.btn(type="submit", value="Join event")
                else
                    input.btn(type="submit", value="Leave event")
        else if event.createdBy == user.id
            br
    else
        a(href=`/login?redirect=/event/${event._id}`) Log in to join
    p Description:
    .description-box
        p #{event.description}
    br
    .share-section
        span.share-label Share this on:
        .shareon
            a.copy-url() Copy URL
            a.facebook() Facebook
            a.reddit() Reddit
            a.print() Print
            a.email(data-title=`Check out this cool event ${event.title}!`) Email
            a.whatsapp(data-title=`Check out this cool event ${event.title}!`, data-text='I found this cool event on www.eventlink.com and I want to invite you!') Whatsapp


    
