extends userLayout

block content 
    a(href="/profile") &larr; Back
    .admin-title
        h2 Add an event

    form(action="/createevent", method="POST")

        label(for="title") Title of your event
        input(type="text", placeholder="Event title", name="title")

        label(for="location") Location of your event
        input(type="text", placeholder="Location of your event", name="location")

        label(for="date") Date of your event
        input(type="date", placeholder="Date of your event", name="date")

        label(for="targetAudience") What is the target audience of your event?
        input(type="text", placeholder="Target audience of your event", name="targetAudience")

        label(for="ticketPrice") What is the ticket price of your event?
        input(type="number", placeholder="Ticket price of your event", name="ticketPrice",min="0", step="0.01")

        label(for="title") Description of your event
        textarea(name="description", placeholder="Give a description of your event. This way people know what they should expect" cols="50", rows="10")
        br
        br
        input.btn-submit(type="submit", value="Add event") 